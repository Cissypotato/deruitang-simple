/* pages/order/order.wxss */

page{background: #F4F4F4}

.main{position: relative}
.background{background: #35BB9A;height: 15vh}
.card{padding: 30rpx;position: absolute;top: 0;width: 100%;}
.address-info{display: inline-flex;justify-content: space-between;line-height: 10vh;font-size: 36rpx;background: #fff;width: 90vw;box-sizing: border-box;border-bottom: 1px solid #eee;padding: 0 40rpx;}
.address-info-left{display: inline-block;width: 90%;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}
.time{display: inline-flex;justify-content: space-between;line-height: 10vh;background: #fff;width: 90vw;box-sizing: border-box;border-bottom: 1px solid #eee;padding: 0 40rpx;}

/*footer*/
.footer{height: 8vh;position: fixed;bottom:0;width: 100%;display: flex;background: #fff;padding: 10rpx;box-sizing: border-box;}
.footer>.left{width: 30%;display: flex;flex-direction: column;align-items: center;justify-content: center;color:#FF4B21;font-size: 36rpx;font-weight: 600}
.footer>.left>.coupon{font-size: 24rpx;color: #aaa;}
.footer>.right{width: 70%;background: #35BB9A;display: flex;flex-direction: column;align-items: center;justify-content: center;color: #fff;border-radius: 10rpx;}
.right>.order{font-size: 28rpx;}

/* foot_pack */
.foot_pack {height:18vw; position:fixed; bottom:0; z-index:1; width:100%; background: #fff; border-top:1px solid #f5f5f5;} 
.foot_pack>t {border-radius:4px; height:12vw; line-height:12vw;  margin-top:3vw; font-size:0.9em; text-align:center;}
.foot_pack>.l { margin-left:5vw; color:#ff5722; float:left; font-size:0.8em; background:#fbe9e7; width:42vw;}
.foot_pack>.l>t { margin-right:0.5em; font-weight:900;}
.foot_pack>.r { margin-right:5vw;  background:#00bcd4; color:#fff; float:right; width:46vw; }



/* .upimg{margin-left:5vw;border: 1px solid red;} */


/* page_pack */
.page_pack {margin-top:3em; border: 1px solid #ddd; border-radius:4px; width:90vw; margin-left:5vw; background:#fff;}
.page_pack {height:2em; line-height:2em; padding:3vw 0;}
.page_pack>l { font-size:0.8em; padding-left:1em; float:left;}
.page_pack>r { font-size:1.3em; color:#00bcd4; padding-right:0.5em; float:right;}


.medicine{display: flex;width: 100%;margin-top: 30rpx;padding:0 5vw;box-sizing: border-box;}

.medicine>.image-wrapper{width: 200rpx;height: 200rpx;background: #FFFFFF;border-radius: 10rpx;}
.medicine>.image-wrapper>image{width: 100%;}
.medicine>.info-wrapper{margin-left: 40rpx;height: 200rpx;display: flex;flex-direction: column;}
.medicine>.info-wrapper>.name{font-size: 32rpx;line-height: 35rpx;color: #4E4F54;margin-top: 15rpx;}
.medicine>.info-wrapper>.price{font-size: 32rpx;line-height: 45rpx; color: #E64340;font-weight: 500;margin-top: 10rpx;}
.medicine>.info-wrapper>.price>span{font-size: 20rpx;line-height: 28rpx; color: #E64340;}
.medicine>.info-wrapper>.num{margin-top: 30rpx;}

